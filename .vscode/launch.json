{
    "version": "1.0.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest: current file",
            "program": "${fileDirname}/../node_modules/.bin/jest",
            "args": ["${fileBasenameNoExtension}", "--config", "${fileDirname}/../jest.config.ts"],
            "console": "integratedTerminal",
            "windows": {
                "program": "${fileDirname}\\..\\node_modules\\jest\\bin\\jest",
                "args": ["${fileBasenameNoExtension}", "--config", "${fileDirname}\\..\\jest.config.ts"],
            }
        }
    ]
}
