{
    "name": "@squide/firefly",
    "author": "Workleap",
    "version": "0.0.1",
    "description": "Helpers to facilitate the creation of a shell package with Squide firefly technology stack.",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gsoft-inc/wl-squide.git",
        "directory": "packages/firefly"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "type": "module",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "/dist",
        "CHANGELOG.md",
        "README.md"
    ],
    "scripts": {
        "dev": "tsup --config ./tsup.dev.ts",
        "build": "tsup --config ./tsup.build.ts"
    },
    "peerDependencies": {
        "msw": "*",
        "react": "*",
        "react-dom": "*",
        "react-error-boundary": "*",
        "react-router-dom": "*"
    },
    "peerDependenciesMeta": {
        "msw": {
            "optional": true
        }
    },
    "devDependencies": {
        "@swc/core": "1.3.95",
        "@swc/helpers": "0.5.3",
        "@swc/jest": "0.2.29",
        "@testing-library/react": "14.0.0",
        "@types/jest": "29.5.6",
        "@types/react": "18.2.33",
        "@types/react-dom": "18.2.14",
        "@workleap/eslint-plugin": "3.0.0",
        "@workleap/swc-configs": "2.1.2",
        "@workleap/tsup-configs": "3.0.1",
        "@workleap/typescript-configs": "3.0.2",
        "jest": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "msw": "1.3.2",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-error-boundary": "4.0.11",
        "react-router-dom": "6.17.0",
        "ts-jest": "29.1.1",
        "tsup": "7.2.0",
        "typescript": "5.2.2"
    },
    "dependencies": {
        "@squide/msw": "workspace:*",
        "@squide/react-router": "workspace:*",
        "@squide/webpack-module-federation": "workspace:*"
    },
    "sideEffects": false,
    "engines": {
        "node": ">=18.0.0"
    }
}
